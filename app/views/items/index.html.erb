<h1 class="text-center">Items</h1>

<%= link_to 'New Item', new_item_path, class: 'btn btn-primary mb-3' %>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.quantity %></td>
        <td>
          <%= link_to 'Show', item_path(item), class: 'btn btn-info btn-sm' %> |
          <%= link_to 'Edit', edit_item_path(item), class: 'btn btn-warning btn-sm' %> |
          <%= link_to 'Destroy', item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
