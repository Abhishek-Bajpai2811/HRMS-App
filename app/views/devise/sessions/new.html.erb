<h2>Log in</h2>

<%= form_with model: @user, url: user_session_path, local: true do |form| %>
  <div class="field">
    <%= form.label :email %><br />
    <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= form.label :password %><br />
    <%= form.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= form.submit "Log in" %>
  </div>

  <!-- Google Login Button -->
  <div class="social-login">
    <%= button_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn-google" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
