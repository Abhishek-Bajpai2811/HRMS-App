<div class="col-lg-12">
  <div class="card rounded-0 mt-5 mb-5">
    <div class="card-body" style="overflow: hidden;">
      <h2 class="text-center">Document Details</h2>
      <div class="row">
        <div class="col-lg-6" style="width: 100%;">
          <% if @document.image.attached? %>
            <%= image_tag @document.image, class: 'img-fluid', style: 'max-width: 100%; max-height: 400px; object-fit: contain;' %>
          <% end %>
          <p class="lead"><strong>Name:</strong> <%= @document.name %>  </p>
          <p class="lead"><strong>Type:</strong> <%= @document.doc_type %>  </p>
          <p class="lead"><strong>Employee:</strong> <%= @document.employee.name %>  </p>
        </div>
      </div>  

      <%= link_to 'Back to Document', documents_path, class: 'btn btn-primary btn-lg rounded-0' %> 
      <%= link_to 'Edit Document', edit_document_path(@document), class: 'btn btn-primary btn-lg rounded-0' %>    
    </div>   
  </div>
</div>
