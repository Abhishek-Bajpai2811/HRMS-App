<div class="col-lg-6 mx-auto">
  <div class="card shadow-sm" style="border: 1px solid #007bff;">
    <div class="card-header text-center" style="background-color: #007bff; color: white;">
      <h2 class="mb-0">Change your password</h2>
    </div>
    <div class="card-body" style="background-color: #f8f9fa;">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, "New password", class: "form-label mb-2" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted mb-2">
              (<%= @minimum_password_length %> characters minimum)
            </small>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-lg", style: "border: 1px solid #007bff;" %>
        </div>

        <div class="form-group mt-4">
          <%= f.label :password_confirmation, "Confirm new password", class: "form-label mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", style: "border: 1px solid #007bff;" %>
        </div>

        <div class="form-group mt-4">
          <%= f.submit "Change my password", class: "btn btn-primary w-100", style: "background-color: #007bff; border-color: #0056b3;" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>

