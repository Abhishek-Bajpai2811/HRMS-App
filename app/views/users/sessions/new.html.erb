<div class="col-lg-6 mx-auto">
  <div class="card shadow-sm" style="border: 1px solid #007bff;">
    <div class="card-header" style="background-color: #007bff; color: white;">
      <h2 class="text-center">Sign in</h2>
    </div>
    <div class="card-body" style="background-color: #f8f9fa;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: 'form-label mb-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", style: "border: 1px solid #007bff;" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'form-label mb-2' %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", style: "border: 1px solid #007bff;" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mt-3">
            <%= f.check_box :remember_me, class: "form-check-input", style: "accent-color: #007bff;" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "Log in", class: 'btn btn-primary mt-4 w-100', style: "background-color: #007bff; border-color: #0056b3;" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
